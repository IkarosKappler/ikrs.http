package ikrs.yuccasrv.ui;

/**
 * @author Henning Diesenberg
 * @date 2012-04-23
 * @version 1.0.0
 **/

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class NewServerDialog 
    extends JDialog 
    implements ActionListener {

    private JTextField
	fieldAddress,
	fieldPort,
	fieldProtocol;

    private JButton
	buttonOK,
	buttonCancel;
    

    public NewServerDialog( ServerManagerDialog d ) {
	super( d, "Create new Server", true );

	Container main = new Container();
	main.setLayout( new GridLayout(4,2) );
	main.add( new JLabel("Address") );
	main.add( this.fieldAddress = new JTextField("127.0.0.1") );

	main.add( new JLabel("Port") );
	main.add( this.fieldPort = new JTextField("9339") );

	main.add( new JLabel("Protocol") );
	main.add( this.fieldProtocol = new JTextField("TCP") );

	main.add( this.buttonCancel = new JButton("Cancel") );
	main.add( this.buttonOK = new JButton("OK") );


	this.buttonCancel.addActionListener( this );
	this.buttonOK.addActionListener( this );

	

	this.getContentPane().setLayout( new BorderLayout() );	
	this.getContentPane().add( main );

	
	this.setBounds( 100, 100, 400, 300 );
	
    }


    public void actionPerformed( ActionEvent e ) {

	if( e.getSource() == this.buttonOK ) {

	    String address = this.fieldAddress.getText();
	    String port = this.fieldPort.getText();
	    String protocol = this.fieldProtocol.getText();
	    

	} else if( e.getSource() == this.buttonCancel ) {

	    this.setVisible( false );

	}
	    
    }
    

}